<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!--   color for the app bar and other primary UI elements -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   a darker variant of the primary color, used for
       the status bar (on Android 5.0+) and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorSecondary</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
        <item name="android:textColorTertiary">@color/colorSecondary</item>

        <!-- activity background -->
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <!-- AppBar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Toolbar -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextNormal" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">@dimen/text_base</item>
    </style>

    <style name="TextNormal.Black" parent="TextNormal">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextNormal.Muted" parent="TextNormal">
        <item name="android:textColor">@color/colorMuted</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:color">@color/colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle.Muted" parent="TextAppearance.AppCompat.Medium">
        <item name="android:color">@color/colorMuted</item>
    </style>

    <style name="TintAccent">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="SplashScreen">
        <item name="android:textSize">@dimen/text_xl</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <style name="NavHeader">
        <item name="android:textSize">@dimen/text_md</item>
    </style>

    <style name="NavHeader.Green" parent="NavHeader">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ItemListImageButton">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- theme independent Styles -->
    <style name="AddFAB" parent="@style/Widget.Design.FloatingActionButton">
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="srcCompat">@drawable/ic_add_white_24dp</item>
    </style>


</resources>
