<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="pref_category_display_options"
        app:title="@string/pref_category_display_options_title"
        app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            android:title="@string/pref_new_items_to_bottom_title"
            android:key="pref_new_items_to_bottom"
            android:defaultValue="true"/>
        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            android:title="@string/pref_ticked_items_to_bottom_title"
            android:key="pref_ticked_items_to_bottom"
            android:defaultValue="true"/>
        <ListPreference
            app:iconSpaceReserved="false"
            android:defaultValue="1"
            android:dialogTitle="@string/pref_application_theme_dialog_title"
            android:entries="@array/pref_application_theme"
            android:entryValues="@array/pref_values_application_theme"
            android:key="pref_application_theme"
            android:title="@string/pref_application_theme_title"
            android:summary="@string/pref_application_theme_summary"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="pref_category_reminders"
        app:title="@string/pref_category_reminders_title"
        app:iconSpaceReserved="false"
        app:allowDividerAbove="false">
        <SwitchPreferenceCompat
            android:key="pref_location_reminders"
            app:iconSpaceReserved="false"
            android:title="@string/pref_location_reminders_title"
            android:defaultValue="false"
            android:summary="@string/pref_location_reminders_summary"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="pref_category_prices"
        app:title="@string/pref_category_prices_title"
        app:iconSpaceReserved="false"
        app:allowDividerAbove="false">
        <SwitchPreferenceCompat
            android:key="pref_enable_prices"
            app:iconSpaceReserved="false"
            android:title="@string/pref_enable_prices_title"
            android:defaultValue="false"
            android:summary="@string/pref_enable_prices_summary"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="pref_category_sharing"
        app:title="@string/pref_category_sharing_title"
        app:iconSpaceReserved="false"
        app:allowDividerAbove="false">
        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            android:title="@string/pref_enable_sharing_title"
            android:key="pref_enable_sharing"
            android:defaultValue="true"
            android:summary="@string/pref_enable_sharing_summary"/>

    </PreferenceCategory>

</PreferenceScreen>